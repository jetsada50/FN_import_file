@inherits LayoutComponentBase


<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<style>
    
    .menu-logo {
        margin: 20px;
        font-weight: bold;
        padding-left: 16px;
        color: #242535;
    }

    .menu-item {
        color: #242535 !important;
        font-weight: bold;
        margin-left: 8px;

    }

    .submenu-item {
        margin-left: 40px;
        color: #555;
    }

    .active {
        background-color: blue !important;
        /* border-left: 4px solid #1976d2; */
        /* padding-left: 16px; */
        color: white !important;
    }

    .user-info {
        display: flex;
        align-items: center;
        margin-top: 20px;
        padding-left: 16px;
    }

    .menu-user {
        margin-left: 10px;
        font-weight: bold;
    }

    .menu-role {
        margin-left: 10px;
        color: gray;
        font-size: 0.8rem;
    }

    .logout-button {
        margin-left: auto;
    }

</style>

<MudLayout>

    <MudDrawer Open="true" Width="220px">
        <MudDrawerHeader>
            <MudText>Organization Logo1</MudText>
        </MudDrawerHeader>
        
        <MudDrawerContainer>
            <MudNavMenu>
                <MudNavLink Href="/" Match="NavLinkMatch.All">Dashboard</MudNavLink>
                <MudNavGroup Title="Number Management" Expanded="true">
                    <MudNavLink Href="/reuse-number" Match="NavLinkMatch.All">Reuse Number</MudNavLink>
                    <MudNavLink Href="/black-list" Match="NavLinkMatch.All">Black List</MudNavLink>

                </MudNavGroup>
            </MudNavMenu>


            <MudText>Tez</MudText>
        </MudDrawerContainer>
    </MudDrawer>


    <MudMainContent Class="pa-0">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    // Variables for controlling state (e.g., expand/collapse menu)
    private bool IsNumberManagementExpanded = true;
}
